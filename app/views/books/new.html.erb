<h1>book投稿フォーム</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
<%= form_with model: @book, local:true do |f| %>
  <h4>タイトル</h4>
    <%= f.text_field :title %>
  <h4>感想</h4>
    <%= f.text_area :body %>
    <%= f.submit '投稿' %>
<% end %>