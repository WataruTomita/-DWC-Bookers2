<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
        <%= render partial: 'books/side', locals: {book:@book_new, user:@book.user} %>
    </div>
      <div class="col-md-8 offset-md-1 post-body">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><br>
                <%= link_to @book.user.name, user_path(@book.user.id) %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if user_signed_in? && current_user.id == @book.user_id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: 'class="btn btn-sm btn-danger' %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>


