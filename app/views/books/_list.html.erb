<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
    <h2>Books</h2>
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |book| %>
      <tr>
        <th scope="row">
          <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
        </th>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate books %>
</div>