<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%# エラーメッセージ %>
      <% if @user.errors.any? %>
      <div>
        <a><%= @user.errors.count %> error prohibited this obj from being saved:</a>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li class="alert"><%= message %></li>
            <% end %>
          </ul>
      </div>
      <% end %>
      <%# エラーメッセージここまで %>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="imputName">Name</label><br />
        <%= f.text_field :name, autofocus: true, id:"inputName, focusedInput", placeholder:"name", class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label><br />
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br />
        <%= f.attachment_field :profile_image, placeholder: "" %>
      </div>
      <div class="form-group">
        <label>Introduction</label><br />
        <%= f.text_field :introduction, autofocus: true, id: "focusedInput", placeholer: "", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
      </div>
      <% end %>
    </div>